html
  head
    title ASE-Official
    //- javascript
    script(src='asset/js/jquery-2.1.3.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
    //- css
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css')
    link(rel='stylesheet', href='asset/css/basic.css')

  body
    //- top nav bar
    nav.navbar.navbar-default(role='navigation')
      .container-fluid
        //- header
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/?name=index') ASE Intelligent Technology
        //- nav bar left
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            //- 節能產品
            - var barleft = appbar.left;
            - for(var i=0; i < barleft.dropdown.length; i++)
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')= barleft.dropdown[i].text
                  span.caret
                ul.dropdown-menu(role='menu')
                  - var content = barleft.dropdown[i].content;
                  - for(var j=0; j < content.length; j++)
                    - var href = { href: content[j].url}
                    - if(content[j].text !== 'divider')
                      li
                        a&attributes(href)= content[j].text
                    - else
                      li.divider
            - for(var j=0; j < barleft.link.length; j++)
              - var href = { href: barleft.link[j].url}
              li
                a&attributes(href)= barleft.link[j].text

          //-
            <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
            <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default">站內搜尋</button>
            </form>
          //- nav bar right

          ul.nav.navbar-nav.navbar-right
            li
              a(href='#' data-toggle='modal', data-target='.bs-example-modal-lg') 關於ASE
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-expanded='false')
                | 更多服務
                span.caret
              ul.dropdown-menu(role='menu')
                li
                  a(href='#') 水電服務
                li
                  a(href='#') 疑問解答
                li.divider
                li
                  a(href='#' data-toggle='modal', data-target='.bs-example-modal-lg') 關於ASE

