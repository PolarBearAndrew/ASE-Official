extends container

block content
  #myCarousel.carousel.slide(data-ride='carousel')
    .carousel-inner(role='listbox')
      .item.active
        img(src='asset/img/fix/show.png', alt='First slide')
  .container
    .row
      - var i = 0
      - for( var col = 0; col < 4; col++)
        - for( ; i < data.length; i++)
          .col-md-3
            - var tmp = data[i]
              .thumbnail
                - if(!tmp.img)
                  img(src='http://ext.pimg.tw/diauchan/49e5a55878b62.jpg', alt='...')
                -else
                  img(src=tmp.img, alt='...')
                .caption
                  h4= tmp.title
                  p(style='height:80px')
                    = tmp.describe
                    //- a.btn.btn-primary.btn-sm(href=tmp.url target="_blank" ) 瞭解更多
    include footer
